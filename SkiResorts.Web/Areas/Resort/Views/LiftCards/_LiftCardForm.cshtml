@model LiftCardFormServiceModel

<form method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" required class="form-control" . />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" min="1" step="0.01" required class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxDaysToUse"></label>
        <input asp-for="MaxDaysToUse" type="number" min="1" max="7" step="1" required class="form-control" />
        <span asp-validation-for="MaxDaysToUse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPeople"></label>
        <input asp-for="NumberOfPeople" type="number" required class="form-control" />
        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
    </div>

    <input asp-for="ResortId" hidden />

    <button type="submit" class="btn btn-default">Save Lift card</button>
</form>
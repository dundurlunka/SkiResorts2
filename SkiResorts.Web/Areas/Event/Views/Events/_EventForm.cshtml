@model EventFormViewModel

<form asp-area="Event" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input required asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea rows="10" required asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input required asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResortId"></label>
        <select asp-for="ResortId" asp-items="Model.Resorts" class="form-control"></select>
        <span asp-validation-for="ResortId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="ManagerId" hidden />
    </div>
    <button type="submit" class="btn btn-default">@ViewData["Title"]</button>
</form>
